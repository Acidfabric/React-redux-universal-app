{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "ecmaFeatures": {
        "jsx": true,
        "es6": true,
        "classes": true
    },
    "rules": {
        "comma-dangle": [1, "always-multiline"],
        "no-underscore-dangle": 0,
        "max-len": [1, 180, 4],
        "arrow-body-style": 0,
        "react/jsx-no-bind": 0,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "import/first": 0
    }
}